<?xml version="1.0"?>
<ruleset name="Receipt API">
    <description>PHP CodeSniffer configuration for Receipt API</description>
    
    <!-- What to scan -->
    <file>backend</file>
    
    <!-- Exclude vendor directory -->
    <exclude-pattern>backend/vendor/*</exclude-pattern>
    <exclude-pattern>*/backend/tests/*</exclude-pattern>

    <!-- How to scan -->
    <arg name="colors"/>
    <arg value="p"/>
    <arg value="s"/>
    <arg value="n"/>
    
    <!-- Rules: PSR12 standard -->
    <rule ref="PSR12"/>
    
    <!-- Custom rules -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="150"/>
        </properties>
    </rule>
</ruleset>