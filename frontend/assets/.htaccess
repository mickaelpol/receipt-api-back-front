# Allow access to all files in assets directory
<IfModule mod_headers.c>
    # Set proper content type for manifest
    <Files "manifest.json">
        Header set Content-Type "application/manifest+json"
        Header set Cache-Control "public, max-age=86400"
    </Files>
    
    # Set proper content type for SVG icons
    <FilesMatch "\.svg$">
        Header set Content-Type "image/svg+xml"
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # Set proper content type for PNG icons
    <FilesMatch "\.png$">
        Header set Content-Type "image/png"
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # Set proper content type for ICO files
    <FilesMatch "\.ico$">
        Header set Content-Type "image/x-icon"
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
</IfModule>

# Enable mod_rewrite for this directory
RewriteEngine On

# Allow access to all files
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]
