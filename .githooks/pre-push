#!/bin/bash

# Git hook pre-push : Tests complets avant push
# BLOQUE le push si les tests Ã©chouent

set -e

echo "ğŸš€ Pre-push checks..."
echo ""

# Couleurs
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

FAILED=0

# RÃ©cupÃ©rer la branche cible
while read local_ref local_sha remote_ref remote_sha
do
    BRANCH=$(echo $remote_ref | sed 's|refs/heads/||')
    echo -e "${BLUE}ğŸ“Œ Push vers la branche: $BRANCH${NC}"
    echo ""
done

# ==== 1. PHPCS - Linting PHP (OBLIGATOIRE) ====
echo "ğŸ” Running PHPCS..."
if [ -f "phpcs.xml" ] && [ -f "backend/vendor/bin/phpcs" ]; then
    if ./backend/vendor/bin/phpcs --standard=phpcs.xml backend/ --extensions=php; then
        echo -e "${GREEN}âœ… PHPCS passed${NC}"
    else
        echo -e "${RED}âŒ PHPCS failed - Fix code style errors${NC}"
        echo "Run: ./backend/vendor/bin/phpcbf --standard=phpcs.xml backend/"
        FAILED=1
    fi
else
    echo -e "${YELLOW}âš ï¸  PHPCS not configured (skipping)${NC}"
fi
echo ""

# ==== 2. PHP Syntax Check (OBLIGATOIRE) ====
echo "ğŸ” Checking PHP syntax..."
PHP_FILES=$(find backend -name "*.php" -not -path "*/vendor/*")
PHP_ERRORS=0

for file in $PHP_FILES; do
    if ! php -l "$file" > /dev/null 2>&1; then
        echo -e "${RED}âŒ Syntax error in: $file${NC}"
        php -l "$file"
        PHP_ERRORS=$((PHP_ERRORS + 1))
    fi
done

if [ $PHP_ERRORS -eq 0 ]; then
    echo -e "${GREEN}âœ… PHP syntax OK${NC}"
else
    echo -e "${RED}âŒ Found $PHP_ERRORS PHP syntax errors${NC}"
    FAILED=1
fi
echo ""

# ==== 3. JavaScript Lint (OBLIGATOIRE) ====
echo "ğŸ” Checking JavaScript..."
JS_FILES=$(find frontend/assets/js -name "*.js" 2>/dev/null || true)
JS_ERRORS=0

if [ -n "$JS_FILES" ] && command -v node &> /dev/null; then
    for file in $JS_FILES; do
        if ! node --check "$file" > /dev/null 2>&1; then
            echo -e "${RED}âŒ Syntax error in: $file${NC}"
            node --check "$file"
            JS_ERRORS=$((JS_ERRORS + 1))
        fi
    done

    if [ $JS_ERRORS -eq 0 ]; then
        echo -e "${GREEN}âœ… JavaScript syntax OK${NC}"
    else
        echo -e "${RED}âŒ Found $JS_ERRORS JavaScript syntax errors${NC}"
        FAILED=1
    fi
else
    echo -e "${YELLOW}âš ï¸  Node.js not available (skipping JS checks)${NC}"
fi
echo ""

# 2. VÃ©rifier que les dÃ©pendances sont Ã  jour
echo "ğŸ“¦ VÃ©rification des dÃ©pendances..."

# VÃ©rifier composer.lock
if [ -f "backend/composer.json" ]; then
    if git diff --name-only HEAD~1..HEAD | grep -q "backend/composer.json"; then
        if ! git diff --name-only HEAD~1..HEAD | grep -q "backend/composer.lock"; then
            echo -e "${YELLOW}âš ï¸  Warning: composer.json modifiÃ© mais pas composer.lock${NC}"
            echo "Lancez: cd backend && composer update"
        fi
    fi
fi

echo -e "${GREEN}âœ… DÃ©pendances OK${NC}"
echo ""

# 3. VÃ©rifier la configuration Docker
echo "ğŸ³ VÃ©rification Docker..."

if [ -f "infra/Dockerfile" ]; then
    # VÃ©rifier que le Dockerfile est valide
    if ! grep -q "FROM php:8.1-apache" infra/Dockerfile; then
        echo -e "${RED}âŒ Dockerfile invalide (FROM manquant)${NC}"
        FAILED=1
    fi
    
    # VÃ©rifier que .htaccess est copiÃ©
    if ! grep -q "COPY .htaccess" infra/Dockerfile; then
        echo -e "${YELLOW}âš ï¸  Warning: .htaccess pas copiÃ© dans Dockerfile${NC}"
    fi
    
    echo -e "${GREEN}âœ… Docker OK${NC}"
else
    echo -e "${YELLOW}âš ï¸  Dockerfile non trouvÃ©${NC}"
fi
echo ""

# 4. VÃ©rifier cloudbuild.yaml
echo "â˜ï¸  VÃ©rification Cloud Build..."

if [ -f "cloudbuild.yaml" ]; then
    # VÃ©rifier que le fichier est valide YAML
    if command -v python3 &> /dev/null; then
        python3 -c "import yaml; yaml.safe_load(open('cloudbuild.yaml'))" 2>/dev/null
        if [ $? -eq 0 ]; then
            echo -e "${GREEN}âœ… cloudbuild.yaml valide${NC}"
        else
            echo -e "${RED}âŒ cloudbuild.yaml invalide${NC}"
            FAILED=1
        fi
    fi
else
    echo -e "${YELLOW}âš ï¸  cloudbuild.yaml non trouvÃ©${NC}"
fi
echo ""

# ==== 5. Protection branche main ====
if [ "$BRANCH" = "main" ] || [ "$BRANCH" = "master" ]; then
    echo ""
    echo -e "${YELLOW}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${NC}"
    echo -e "${YELLOW}â•‘  âš ï¸  PUSHING TO MAIN BRANCH                          â•‘${NC}"
    echo -e "${YELLOW}â•‘                                                       â•‘${NC}"
    echo -e "${YELLOW}â•‘  Cloud Run dÃ©ploiera automatiquement en production!  â•‘${NC}"
    echo -e "${YELLOW}â•‘                                                       â•‘${NC}"
    echo -e "${YELLOW}â•‘  VÃ©rifiez que:                                        â•‘${NC}"
    echo -e "${YELLOW}â•‘  â€¢ Tous les tests passent                             â•‘${NC}"
    echo -e "${YELLOW}â•‘  â€¢ Le code fonctionne en local                        â•‘${NC}"
    echo -e "${YELLOW}â•‘  â€¢ make smoke-test rÃ©ussit                            â•‘${NC}"
    echo -e "${YELLOW}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
    echo ""

    # Afficher les derniers commits
    echo "ğŸ“‹ Commits to be pushed:"
    git log origin/main..HEAD --oneline 2>/dev/null | head -5 || echo "  (first push to main)"
    echo ""

    read -p "Push to main and deploy to production? [y/N] " -n 1 -r
    echo ""
    if [[ ! $REPLY =~ ^[Yy]$ ]]; then
        echo -e "${RED}âŒ Push cancelled by user${NC}"
        exit 1
    fi
fi

# RÃ©sultat final
if [ $FAILED -eq 1 ]; then
    echo ""
    echo -e "${RED}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${NC}"
    echo -e "${RED}â•‘  âŒ PRE-PUSH CHECKS FAILED            â•‘${NC}"
    echo -e "${RED}â•‘  Corrigez les erreurs ci-dessus       â•‘${NC}"
    echo -e "${RED}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
    echo ""
    echo "Pour bypasser (dÃ©conseillÃ©): git push --no-verify"
    exit 1
fi

echo -e "${GREEN}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${NC}"
echo -e "${GREEN}â•‘  âœ… ALL PRE-PUSH CHECKS PASSED        â•‘${NC}"
echo -e "${GREEN}â•‘  ğŸš€ Push autorisÃ©                     â•‘${NC}"
echo -e "${GREEN}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
echo ""

exit 0

